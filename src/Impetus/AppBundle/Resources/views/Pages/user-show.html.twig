{% extends "ImpetusAppBundle::layout.html.twig" %}
{% import "ImpetusAppBundle:Macros:table.html.twig" as table %}

{% set fullName = user.firstName ~ " " ~ user.lastName %}

{% block title "Profile: " ~ fullName %}

{% block extrascripts %}
    <link type="text/css" href="{{ asset('bundles/impetusapp/css/user.css') }}" rel="stylesheet" />
{% endblock %}

{% block content %}
    <div id="user-profile">
        <div id="user-heading">
            <div id="user-avatar">
                No Avatar
            </div>
            <div id="user-basic-info">
                <h1>{{ fullName }} ({{ user.username }})</h1>

                <p>
                    {% for role in user.userRoles %}
                        {% if role == "ROLE_ADMIN" %}
                            Administrator
                        {% elseif role == "ROLE_TEACHER" %}
                            Teacher
                        {% elseif role == "ROLE_STUDENT" %}
                            {% if student != null %}
                                Student at {{ student.roster.district.name }}
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                </p>

                <p>{{ user.email }}</p>
            </div>

            <br class="clear-fix" />
        </div>

        <div class="user-panel">
            <h2>Personal</h2>
            <table>
                {{ table.info_row('Birthday', user.birthday|date("Y-m-d")) }}
                {{ table.divider }}

                {{ table.info_row('Ethnicity', user.ethnicity) }}
                {{ table.divider }}

                {{ table.info_row('Gender', user.gender) }}
            </table>

        {% if student != null %}
            <h2>Education</h2>
            <table>
                <tr>
                    <th class="label">Academic Term</th>
                    <td class="data">
                        {% if student.roster.district != null %}
                            Grade {{ student.grade }} at {{ student.roster.district.name }}
                        {% else %}
                            <i>Not entered</i>
                        {% endif %}
                    </td>
                </tr>
                {{ table.divider }}

                <tr>
                    <th class="label">Standardized Exams</th>
                    <td class="data">
                        <ul class="data-list">
                        {% for exam in student.exams %}
                            <li>{{ exam.name }}: {{ exam.score }}</li>
                        {% else %}
                            <li><i>Not entered</i></li>
                        {% endfor %}
                        </ul>
                    </td>
                </tr>
                {{ table.divider }}

                <tr>
                    <th class="label">Activities</th>
                    <td class="data">
                        <ul class="data-list">
                        {% for activity in student.activities %}
                            <li>{{ activity.name }}</li>
                        {% else %}
                            <li><i>Not entered</i></li>
                        {% endfor %}
                        </ul>
                    </td>
                </tr>
                {{ table.divider }}

                {{ table.info_row('College') }}
                {{ table.divider }}

                {{ table.info_row('Major') }}
            </table>
        {% endif %}

            <br class="clear-fix" />
        </div>

        <div style="float: right; width: 48%">
            <h2>Actions</h2>

            <ul style="padding-left: 16px;">
                <li><a href="#">View Classes</a></li>
                <li><a href="#">View Assessment and Exam Data</a></li>
                <li><a href="{{ path('_user_edit', {'id': user.id }) }}">Edit User</a></li>
            </ul>
        </div>

        <br class="clear-fix" />
    </div>
{% endblock %}
