{% extends "ImpetusAppBundle::layout.html.twig" %}

{% block title "User List" %}

{% block extrascripts %}
    <link type="text/css" href="{{ asset('bundles/impetusapp/css/user.css') }}" rel="stylesheet" />
{% endblock %}

{% block content %}
    <h1>Users</h1>
    <ul>
    {% for user in users %}
        <li><a href="{{ path('_user_show', { 'id': user.id }) }}">{{ user.firstName }} {{ user.lastName }}</a></li>
    {% endfor %}
    </ul>

    <p><a href="{{ path('_user_new') }}" style="font-size: 16px;">New User</a></p>
{% endblock %}