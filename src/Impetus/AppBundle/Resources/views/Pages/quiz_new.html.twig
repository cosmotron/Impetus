{% extends "ImpetusAppBundle::layout.html.twig" %}

{% block title "Quiz Creator" %}

{% block extrascripts %}
    <link type="text/css" href="{{ asset('bundles/impetusapp/css/quiz.css') }}" rel="stylesheet" />
{% endblock %}


{% block content %}
<h1>Quiz Creator</h1>
<form id="new-quiz">
    <h2>Instructions</h2>
    <div id="instructions">
        <textarea style="width: 100%; margin-bottom: 20px;">For each problem, solve for x.</textarea>
        <input type="submit" value="Save Instructions" class="submit" />
    </div>

    <h2>Problem 1 (Fill-in-the-blank) - (<a href="#">remove</a>)</h2>
    <div class="problem">
        <div class="question" style="font-family: Helvetica, Arial, sans-serif; font-size: 16px; font-style: normal;">
            Problem:
            <textarea style="width: 100%; margin-bottom: 20px;">\[
2x + 8 = 16
\]</textarea>
            <input type="submit" value="Save Question and Answer for Problem 1" class="submit" />
        </div>
        <div class="divider"></div>
        <div class="answer" style="font-family: Helvetica, Arial, sans-serif; font-size: 16px; font-style: normal;">
            Preceeding text:<br />
            <textarea style="width: 100%; margin-bottom: 20px;">x =</textarea>

            Answer:<br />
            <textarea style="width: 100%; margin-bottom: 20px;">4</textarea>
        </div>

        <br class="clear-fix" />
    </div>

    <h2>Problem 2 (Multiple Choice) - (<a href="#">remove</a>)</h2>
    <div class="problem">
        <div class="question" style="font-family: Helvetica, Arial, sans-serif; font-size: 16px; font-style: normal;">
            Problem:
            <textarea style="width: 100%; margin-bottom: 20px;">\[
10 + 3x = 31
\]</textarea>
            <input type="submit" value="Save Question and Answer for Problem 2" class="submit" />
        </div>
        <div class="divider"></div>
        <div class="answer" style="font-family: Helvetica, Arial, sans-serif; font-size: 16px; font-style: normal;">
            Preceeding text:<br />
            <textarea style="width: 100%; margin-bottom: 20px;">x =</textarea>

            Answer 1: <input type="text" value="3" /> Correct: <input type="checkbox" /> - (<a href="#">remove</a>)<br />
            Answer 2: <input type="text" value="4" /> Correct: <input type="checkbox" /> - (<a href="#">remove</a>)<br />
            Answer 3: <input type="text" value="5" /> Correct: <input type="checkbox" /> - (<a href="#">remove</a>)<br />
            Answer 4: <input type="text" value="6" /> Correct: <input type="checkbox" /> - (<a href="#">remove</a>)<br />
            Answer 5: <input type="text" value="7" /> Correct: <input type="checkbox" checked="checked" /> - (<a href="#">remove</a>)<br />

            <br />

            <a href="#">Add Additional Answer</a>
        </div>

        <br class="clear-fix" />
    </div>
</form>

<a href="#">Add Multiple Choice</a> - <a href="#">Add Fill-in-the-blank</a>
{% endblock %}