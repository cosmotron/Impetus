<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>IMPETUS - Login</title>
        {% stylesheets '@ImpetusAppBundle/Resources/public/css/login.css' %}
            <link type="text/css" href="{{ asset_url }}" rel="stylesheet" />
        {% endstylesheets %}

        <script type="text/javascript">
          function setFocus() {
              document.getElementById('username').focus();
          }
        </script>
    </head>
    <body onLoad="setFocus()">
        <div id="content">
            <h1>IMPETUS Login</h1>
            {% if error %}
                <div id="error">{{ error.message }}</div>
            {% endif %}

            <form action="{{ path('_login_check') }}"  id="login-form" method="post">
                <div>
                    <label for="username">Username:</label>
                    <br />
                    <input id="username" name="_username" type="text" value="{{ last_username }}" />
                </div>
                <div>
                    <label for="password">Password:</label>
                    <br />
                    <input id="password" name="_password" type="password" />
                </div>

                <input type="submit" value="Login" />
            </form>
        </div>
    </body>
</html>